                                    @*<a href="~/Views/ListUser/Update_user.cshtml">Guardar</a>*@

                                    <a href="/ListUser/Delete_user?id=@data_user["id"]">Eliminar</a>

                                </td>

                                @*<td>
                                    <div class="form-group">

                                        <input type="submit" value="Guardar" name="btn_guarda" class="btn btn-primary" />

                                    </div>
                                </td>*@

                            </tr>


                        }
                    }

                </tbody>

            </table>

        </div>

    </form>
</body>
</html>