@model  System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Nombre</th>
        <th>email</th>
        <th>password</th>
        <th>fecha</th>
        <th>idRol</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    { 
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>
                <a href="@Url.Action("Edit","usuario",new {@id=Model.Rows[i][0] })">Editar</a>
                <a href="@Url.Action("Delete","usuario",new {@id=Model.Rows[i][0] })">Eliminar</a>
            </td>
            
        </tr>
    }
</table>

